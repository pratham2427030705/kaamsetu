                                        <div className="space-y-1">
                                            <label className="text-[8px] font-black text-orange-400 uppercase tracking-widest block mb-1 ml-1">Service Type</label>
                                            <select className="w-full px-5 py-3 bg-orange-50 rounded-xl outline-none focus:ring-2 focus:ring-orange-200 text-sm font-medium border border-transparent">
                                                {CATEGORIES.map(c => <option key={c.name}>{c.name}</option>)}
                                            </select>
                                        </div>
                                        <button onClick={() => setView('home')} className="w-full bg-orange-600 text-white py-4 rounded-full font-black uppercase tracking-widest shadow-md text-[10px] mt-2">Publish Post Now</button>
                                    </div>
                                </div>
                            </div>
                        )}

                        {view === 'workers' && (
                            <div className="space-y-6 animate-fade-in">
                                {renderBackButton('home')}
                                <div className="flex flex-col md:flex-row md:items-center justify-between gap-4">
                                    <h2 className="text-2xl font-serif font-black text-orange-950 uppercase tracking-widest">Directory</h2>
                                    <div className="relative">
                                        <input type="text" placeholder="Search Ramesh, Plumbing..." className="bg-white border border-orange-100 rounded-full px-5 py-2 text-xs outline-none focus:border-orange-400 w-full md:w-64 font-medium" onChange={(e) => setSearchQuery(e.target.value)} />
                                    </div>
                                </div>
                                <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                                    {sortedWorkers.map(worker => (
                                        <div key={worker.id} onClick={() => { setSelectedWorker(worker); setView('worker-profile'); }} className="bg-white p-4 rounded-2xl border border-orange-50 shadow-sm hover:shadow-md transition-all cursor-pointer">
                                            <div className="flex items-center gap-3 mb-4">
                                                <div className="w-10 h-10 bg-orange-600 rounded-lg flex-shrink-0 flex items-center justify-center text-white">
                                                    <UserIcon size={18} />
                                                </div>
                                                <div className="min-w-0">
                                                    <h4 className="font-serif font-black text-orange-950 text-sm truncate">{worker.name}</h4>
                                                    <p className="text-orange-600 text-[8px] font-black uppercase tracking-widest">{worker.skill}</p>
                                                </div>
                                            </div>
                                            <div className="flex justify-between items-center bg-orange-50/50 p-2 rounded-lg">
                                                <span className="text-sm font-black text-orange-900 leading-none tracking-tight">‚Çπ{worker.rate}/hr</span>
                                                <span className="text-xs font-bold text-orange-600 leading-none">‚≠ê {worker.rating}</span>
                                            </div>
                                        </div>
                                    ))}
                                </div>
                            </div>
                        )}
                    </main>

                    <footer className="max-w-6xl mx-auto px-4 py-8 text-center text-orange-200">
                        <p className="text-[10px] font-black uppercase tracking-[0.3em]">KaamSetu ¬© 2024</p>
                    </footer>
                </div>
            );
        };

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>
