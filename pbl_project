                                    </div>
                                </div>
                                <button type="submit" className="w-full bg-orange-600 text-white py-3 rounded-full font-black uppercase tracking-widest shadow-lg hover:bg-orange-700 transition-all text-[10px] mt-2">Get OTP Code</button>
                            </form>
                        </div>
                    </div>
                );
            }

            if (view === 'otp') {
                return (
                    <div className="min-h-screen bg-[#FFF9F2] flex items-center justify-center p-6 animate-fade-in">
                        <div className="max-w-sm w-full bg-white rounded-3xl shadow-xl p-7 border border-orange-100">
                            <button onClick={() => setView('auth')} className="mb-4 text-orange-400 text-[9px] font-black uppercase flex items-center gap-1">
