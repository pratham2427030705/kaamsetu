                                <div className="bg-orange-600 p-1.5 rounded-lg text-white">
                                    <RupeeIcon size={18} />
                                </div>
                                <h1 className="text-xl font-serif font-black tracking-widest text-orange-900 uppercase leading-none">KAAMSETU</h1>
                            </div>
                            <div className="flex items-center gap-3 pl-4 border-l border-orange-100">
                                <div className="text-right hidden sm:block">
