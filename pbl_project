                                    <button 
                                        type="button" 
                                        onClick={() => setRegData({...regData, role: 'user'})} 
                                        className={`flex-1 py-1.5 rounded-lg text-[9px] font-black uppercase transition-all ${regData.role === 'user' ? 'bg-orange-600 text-white shadow-sm' : 'text-orange-400'}`}
                                    >
                                        User
                                    </button>
                                    <button 
                                        type="button" 
                                        onClick={() => setRegData({...regData, role: 'worker'})} 
